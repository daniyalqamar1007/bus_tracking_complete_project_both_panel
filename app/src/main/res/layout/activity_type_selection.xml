<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".type_selection"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="536dp"
        android:background="@drawable/curve"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="271dp"
            android:layout_height="100dp"
            android:layout_marginBottom="56dp"
            android:background="@drawable/selection_box"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="1.0">

            <ImageButton
                android:id="@+id/driver_logo_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selection_box"
                app:srcCompat="@drawable/driver"
                tools:ignore="VectorDrawableCompat" />

            <Button
                android:id="@+id/driver_button"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selection_box"
                android:fontFamily="sans-serif-black"
                android:text="Driver"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:textSize="25dp"
                app:srcCompat="@drawable/driver"
                tools:ignore="VectorDrawableCompat" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="271dp"
            android:layout_height="100dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/selection_box"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent">


            <ImageButton
                android:id="@+id/passenger_logo_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selection_box"
                app:srcCompat="@drawable/passenger"
                tools:ignore="VectorDrawableCompat" />

            <Button
                android:id="@+id/passenger_button"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selection_box"
                android:fontFamily="sans-serif-black"
                android:text="Passenger"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:textSize="25dp"
                app:srcCompat="@drawable/driver"
                tools:ignore="VectorDrawableCompat" />


        </LinearLayout>

        <ImageView

            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/bus_no_bg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:textColor="@color/green"
        android:fontFamily="sans-serif-light"
        android:text="Select Your Type"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="115dp"
        android:layout_height="123dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015"
        app:srcCompat="@drawable/no_background" />
</androidx.constraintlayout.widget.ConstraintLayout>